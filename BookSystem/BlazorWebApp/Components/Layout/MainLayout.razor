@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudLink Href="/" Color="Color.Inherit">My Application</MudLink>
        <MudSpacer />

        <MudLink Href="/About" Color="Color.Inherit">About</MudLink>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Style="margin-top:8px;margin-bottom:64px;">
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Bottom="true" Fixed="true" Class="align-center">
        <MudText Typo="Typo.body1" Align="Align.Center">© copyright educational purposes: Jan Denmark Calo, OE02, Tina Caron</MudText>
    </MudAppBar>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}